<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/iv_full_rounded_corner" />

            <ImageView
                android:id="@+id/ivSideLine"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#aeacac" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <com.cycliq.utils.TextViewWithFont
                    android:id="@+id/tvBikeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="23-09-2017 23:32:32"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    font:name="Ubuntu"
                    font:type="regular" />

                <com.cycliq.utils.TextViewWithFont
                    android:id="@+id/tvTripAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:text="$100"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    font:name="Ubuntu"
                    font:type="regular" />

                <ImageButton
                    android:id="@+id/tvdf"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_arrow_right"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <com.cycliq.utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TRIP ID: "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    font:name="Ubuntu"

                    font:type="regular" />


                <com.cycliq.utils.TextViewWithFont
                    android:id="@+id/tvTripId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2345354345"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    font:name="Ubuntu"
                    font:type="regular" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/viewBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>
