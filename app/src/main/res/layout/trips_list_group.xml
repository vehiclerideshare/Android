<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutGroupMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_green_bike" />

            <ImageView
                android:id="@+id/ivSideLine"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#aeacac" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.cycliq.utils.TextViewWithFont
                    font:name="OpenSans"
                    font:type="regular"
                    android:id="@+id/tvBikeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="23-09-2017 23:32:32"
                    android:textColor="@color/black1"
                     />

                <com.cycliq.utils.TextViewWithFont
                    font:name="OpenSans"
                    font:type="bold"
                    android:id="@+id/tvTripAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:text="$100"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:id="@+id/ivExpand"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_plus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <com.cycliq.utils.TextViewWithFont
                    font:name="OpenSans"
                    font:type="regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TRIP ID: "
                    android:textColor="@color/gray1" />


                <com.cycliq.utils.TextViewWithFont
                    font:name="OpenSans"
                    font:type="regular"
                    android:id="@+id/tvTripId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2345354345"
                    android:textColor="@color/gray1" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/viewBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>
