<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.cycliq.utils.TextViewWithFont
            font:name="Ubuntu"
            font:type="regular"
            android:id="@+id/tvBikeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="23-09-2017 23:32:32"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <com.cycliq.utils.TextViewWithFont
            font:name="Ubuntu"
            font:type="regular"
            android:id="@+id/tvTripAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow"
            android:text="100 INR"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.cycliq.utils.TextViewWithFont
            font:name="Ubuntu"
            font:type="regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TRIP ID: "
            android:textColor="@android:color/black" />


        <com.cycliq.utils.TextViewWithFont
            font:name="Ubuntu"
            font:type="regular"
            android:id="@+id/tvTripId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2345354345"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/durationClr"
            android:src="@mipmap/duration" />

        <com.cycliq.utils.TextViewWithFont
            font:name="Ubuntu"
            font:type="regular"
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Duration : 6 Min"
            android:textColor="@android:color/darker_gray" />

        <com.cycliq.utils.TextViewWithFont
            font:name="Ubuntu"
            font:type="regular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow"
            android:text="100 INR"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />


</LinearLayout>