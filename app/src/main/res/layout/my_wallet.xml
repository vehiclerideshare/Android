<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:src="@mipmap/back" />

                <com.cycliq.utils.TextViewWithFont
                    android:id="@+id/textView2"
                    style="@style/nav_title_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/title_my_wallet"
                    android:textAllCaps="false"
                    font:name="Ubuntu"
                    font:type="regular" />


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.7"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wallet_top" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.cycliq.utils.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgProfile"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Account Balance"
                        android:textColor="#5c5d5e"
                        android:textSize="18dp"
                        font:name="Ubuntu"
                        font:type="regular" />

                    <com.cycliq.utils.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgProfile"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="₹120.0"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        font:name="Ubuntu"
                        font:type="regular" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <com.cycliq.utils.TextViewWithFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgProfile"
                    android:gravity="center"
                    android:text="Your Amount"
                    android:textColor="#949596"
                    android:textSize="16dp"
                    font:name="OpenSans"
                    font:type="regular" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/txtAmount"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="0dp"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:backgroundTint="#fa7f3a"
                        android:text="0"
                        android:textAlignment="center" />

                </android.support.design.widget.TextInputLayout>

                <!--<EditText-->
                <!--android:id="@+id/txtAmount"-->
                <!--style="@style/txt_style"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="45dp"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:digits="0123456789"-->
                <!--android:hint="0"-->
                <!--android:inputType="number"-->
                <!--android:maxLength="10"-->
                <!--android:maxLines="1"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:textAlignment="center" />-->

                <com.cycliq.utils.TextViewWithFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgProfile"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Quick Recharges ₹"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    font:name="Ubuntu"
                    font:type="regular" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/layoutAdd1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="0dp"
                            android:background="@android:color/transparent"
                            android:padding="1dp"
                            android:textColor="@android:color/black">

                            <com.cycliq.utils.TextViewWithFont
                                android:id="@+id/txtAdd1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/txt_full_rounded_corner"
                                android:gravity="center"
                                android:text="50"
                                android:textColor="@android:color/black"
                                android:textSize="24dp"
                                font:name="Ubuntu"
                                font:type="regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutAdd3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:padding="1dp">

                            <com.cycliq.utils.TextViewWithFont
                                android:id="@+id/txtAdd3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/txt_full_rounded_corner"
                                android:gravity="center"
                                android:text="200"
                                android:textColor="@android:color/black"
                                android:textSize="24dp"
                                font:name="Ubuntu"
                                font:type="regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutAdd2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:padding="1dp">

                            <com.cycliq.utils.TextViewWithFont
                                android:id="@+id/txtAdd2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/txt_full_rounded_corner"
                                android:gravity="center"
                                android:text="100"
                                android:textColor="@android:color/black"
                                android:textSize="24dp"
                                font:name="Ubuntu"
                                font:type="regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutAdd4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:padding="1dp">

                            <com.cycliq.utils.TextViewWithFont
                                android:id="@+id/txtAdd4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/txt_full_rounded_corner"
                                android:gravity="center"
                                android:text="500"
                                android:textColor="@android:color/black"
                                android:textSize="24dp"
                                font:name="Ubuntu"
                                font:type="regular" />

                        </LinearLayout>

                    </LinearLayout>


                </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/layoutRecharge"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_rounded_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_recharge" />


                    <Button
                        android:id="@+id/btnRecharge"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:background="@android:color/transparent"
                        android:text="Recharge"
                        android:visibility="gone"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <com.cycliq.utils.TextViewWithFont
                        android:id="@+id/txtRecharge"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:textAlignment="textStart"
                        android:text="Recharge"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="16dp"
                        font:name="Ubuntu"
                        font:type="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <com.cycliq.utils.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgProfile"
                        android:gravity="center"
                        android:text="Deposit 299 CNY "
                        android:textSize="15dp"
                        android:textStyle="bold"
                        font:name="Ubuntu"
                        font:type="regular" />

                    <com.cycliq.utils.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgProfile"
                        android:gravity="center"
                        android:text="Refund deposit"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        font:name="Ubuntu"
                        font:type="regular" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


