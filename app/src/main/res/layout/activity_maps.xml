<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e6e6"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6e6e6"
            android:orientation="vertical">

            <!--<include-->
            <!--layout="@layout/navigation_bar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize" />-->

            <LinearLayout
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/appBgColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/btnMenu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:padding="15dp"
                                    android:src="@mipmap/menu" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:gravity="right">

                                <ImageButton
                                    android:id="@+id/btnCompose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:padding="15dp"
                                    android:src="@mipmap/menu"
                                    android:visibility="gone" />

                                <ImageButton
                                    android:id="@+id/btnReport"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:padding="15dp"
                                    android:src="@mipmap/info" />

                                <ImageButton
                                    android:id="@+id/btnSearch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:padding="15dp"
                                    android:src="@mipmap/search" />

                            </LinearLayout>

                        </LinearLayout>

                        <com.cycliq.utils.TextViewWithFont
                            android:id="@+id/textView2"
                            style="@style/nav_title_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/title_cyc"
                            android:textAllCaps="false"
                            font:name="OpenSans"
                            font:type="bold" />

                        <LinearLayout
                            android:id="@+id/layoutSearch"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/colorSearchBg"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!--<fragment-->
                                <!--android:id="@+id/place_autocomplete_fragment"-->
                                <!--android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="match_parent" />-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@color/colorSearchBg"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@color/colorSearchBg"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <EditText
                                                android:id="@+id/editSearch"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_margin="8dp"
                                                android:background="@drawable/edittext_border_color"
                                                android:drawablePadding="5dp"
                                                android:paddingLeft="5dp"
                                                android:src="@mipmap/menu_white" />

                                            <fragment
                                                android:id="@+id/place_autocomplete_fragment"
                                                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" />

                                        </FrameLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorSearchBg"
                                        android:gravity="right"
                                        android:visibility="visible">

                                        <Button
                                            android:id="@+id/btnSearchCancel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/transparent"
                                            android:padding="15dp"
                                            android:text="Cancel" />

                                    </LinearLayout>

                                </LinearLayout>
                            </FrameLayout>

                        </LinearLayout>

                    </FrameLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:context="com.cycliq.MapsActivity" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnRefresh"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/refresh" />


                        <LinearLayout
                            android:id="@+id/layoutBottomButtons"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/btn_rounded_corner"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp">


                            <ImageView
                                android:id="@+id/imgUnlock"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/unlock"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imgReserve"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_reserve" />


                            <Button
                                android:id="@+id/btnUnlock"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:background="@android:color/transparent"
                                android:text=" Submit"
                                android:textAlignment="textStart"
                                android:textAllCaps="false"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <com.cycliq.utils.TextViewWithFont
                                android:id="@+id/txtUnlock"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:gravity="center|left"
                                android:paddingRight="10dp"
                                android:text=" Unlock"
                                android:textColor="@android:color/white"
                                android:textSize="16dp"
                                android:visibility="gone"
                                font:name="Ubuntu"
                                font:type="bold" />

                            <Button
                                android:id="@+id/btnReserve"
                                style="@style/btn_style"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:drawableLeft="@mipmap/ic_reserve"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="Reserve"
                                android:visibility="gone" />


                            <com.cycliq.utils.TextViewWithFont
                                android:id="@+id/txtReserve"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:gravity="center|left"
                                android:paddingRight="15dp"
                                android:text=" Reserve"
                                android:textColor="@android:color/white"
                                android:textSize="16dp"
                                font:name="Ubuntu"
                                font:type="bold" />

                        </LinearLayout>


                        <ImageButton
                            android:id="@+id/btnLocation"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/locator" />

                    </LinearLayout>


                    <LinearLayout
