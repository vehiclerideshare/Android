    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="txt_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/txt_rounded_corner</item>
    </style>

    <style name="btn_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_rounded_corner</item>
    </style>



    <style name="btn_rounded" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/btn_rounded_corner</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="OtpView">
        <attr name="android:inputType" />
        <attr name="android:textColor" />
        <attr name="text_background_color" format="color" />
        <attr name="otp" format="string"/>
    </declare-styleable>

</resources>
